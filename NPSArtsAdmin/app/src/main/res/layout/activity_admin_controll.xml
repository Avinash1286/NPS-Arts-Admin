<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ECECEC"
    android:layout_height="match_parent"
    tools:context=".AdminControll">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/adminappbar"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminTool"
        android:background="@color/primary"
        /></com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/bottomnav"
        android:layout_height="match_parent"
        android:layout_below="@id/adminappbar"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayer"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layer1">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/card1"
                app:cardMaxElevation="1dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#fff">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/adminWeeklyQuizImage"
                        android:src="@drawable/compquizlogo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adminTextCreatWeeklyQuizHeading"
                        android:layout_below="@+id/adminWeeklyQuizImage"
                        android:layout_marginTop="5dp"
                        android:text="Weekly Quiz"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="1dp"
                android:id="@+id/card2"
                android:layout_weight="1"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#fff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/adminVotingImage"
                        android:src="@drawable/votingnew"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adminVotingHeading"
                        android:padding="10dp"
                        android:layout_below="@+id/adminVotingImage"
                        android:layout_marginTop="5dp"
                        android:text="Conduct Voting"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layer2">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="1dp"
                android:id="@+id/card3"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#fff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/adminManagevotingImage"
                        android:src="@drawable/managevoting"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adminTextManageVoting"
                        android:layout_below="@+id/adminManagevotingImage"
                        android:layout_marginTop="5dp"
                        android:text="Manage Voting"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="1dp"
                android:layout_weight="1"
                android:id="@+id/card4"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#fff">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/adminPendingPostImage"
                        android:src="@drawable/comppending"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adminPendingPostHeading"
                        android:padding="10dp"
                        android:layout_below="@+id/adminPendingPostImage"
                        android:layout_marginTop="5dp"
                        android:text="Pending Posts"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layer3">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="1dp"
                android:id="@+id/card5"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#fff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/adminReportImage"
                        android:src="@drawable/compreport"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adminTextReportzHeading"
                        android:layout_below="@+id/adminReportImage"
                        android:layout_marginTop="5dp"
                        android:text="Review Report"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="1dp"
                android:layout_weight="1"
                android:id="@+id/card6"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#fff">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/adminVerifiedImage"
                        android:src="@drawable/compuserlogo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adminManageUserHeading"
                        android:padding="10dp"
                        android:layout_below="@+id/adminVerifiedImage"
                        android:layout_marginTop="5dp"
                        android:text="Manage User"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout></androidx.core.widget.NestedScrollView>
    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomnav"
        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        app:menu="@menu/bottom_nav"
        />

</RelativeLayout>