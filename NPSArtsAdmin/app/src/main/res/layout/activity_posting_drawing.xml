<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostingDrawing">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/postCard"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="#fff"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:id="@+id/photopostTool"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/postCard"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/photouserPostProfile"
                android:src="@drawable/profile"
                android:layout_height="50dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photopostUserName"
                android:layout_toEndOf="@id/photouserPostProfile"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="UserName"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photocontainCaption"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:hint="Add Caption"
                android:textColorHint="#000"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:background="@drawable/editprofileback"
                android:layout_below="@id/photouserPostProfile"
                />

            <ImageView
                android:src="@drawable/image_placeholder"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/photocontainCaption"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:id="@+id/photouploadImage"
                />
        </RelativeLayout></RelativeLayout>
    </ScrollView>
</RelativeLayout>