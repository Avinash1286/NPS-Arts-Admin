<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Post Wall Magazine"
        android:textAlignment="center"
        android:textColor="#000"
        android:id="@+id/createPostTitle"
        />
    <LinearLayout
        android:layout_below="@id/createPostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="100dp"
                android:layout_centerInParent="true"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/articlepost"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/artspostImage" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Article"
                android:textColor="#000"
                android:id="@+id/artsPostHeading"
                android:textAlignment="center"
                android:layout_below="@id/artspostImage"
                android:textSize="18sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="100dp"
                android:layout_centerInParent="true"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/creativehandpost"
                android:layout_marginBottom="5dp"
                android:id="@+id/imagePostImage" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creative Hands"
                android:id="@+id/imagepostHeading"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_below="@id/imagePostImage"
                android:textSize="18sp"
                />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>