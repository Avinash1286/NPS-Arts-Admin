<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="150dp"
    android:layout_margin="3dp"
    android:background="@drawable/popular_back"
    android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile"
                android:id="@+id/holdProfileInPop"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/holdProfileInPop"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:text="Avinash Yadav"
                android:id="@+id/holdeNameInpop"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/holdeNameInpop"
                android:text="View Profile"
                android:id="@+id/showProButtonInpop"
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:background="#03A9F4"
                />
</RelativeLayout>