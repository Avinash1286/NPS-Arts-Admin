<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowWallMagazineComments">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#B4B3B3"
        app:cardMaxElevation="2dp"
        app:cardElevation="2dp"
        android:id="@+id/header"
        app:cardCornerRadius="0dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginStart="10dp"
                android:layout_height="40dp"
                android:id="@+id/cancleComment"
                android:src="@drawable/ic_cancel_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentHeader"
                android:layout_toEndOf="@id/cancleComment"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="Comments:"
                android:textColor="#000"
                android:textSize="20sp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:id="@+id/showCommentForWallMagazine"
        />
</RelativeLayout>