<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mainImage"
        android:padding="2dp"
        android:src="@drawable/mainartslogo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:id="@+id/mainactHeading"
        android:layout_marginStart="15dp"
        android:text="Students's Articles"
        android:textColor="#000"
        android:layout_toEndOf="@id/mainImage"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/addpostlogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:id="@+id/postingWallArts"
        android:layout_marginEnd="10dp"
        />
    <ImageView
        android:src="@drawable/settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:padding="2dp"
        android:focusable="true"
        android:id="@+id/publishWallMagazine"
        android:layout_marginEnd="10dp"
        />
    </LinearLayout>
</RelativeLayout>