<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#000"
        android:text="Select Competition"
        android:textAlignment="center"
        android:id="@+id/compTitle"
        />
    <LinearLayout
        android:layout_below="@id/compTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="100dp"
                android:layout_centerInParent="true"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/openquizlogo"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/selectQuizImage" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Quiz"
                android:textColor="#000"
                android:id="@+id/selectQuizHeading"
                android:textAlignment="center"
                android:layout_below="@id/selectQuizImage"
                android:textSize="18sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="100dp"
                android:layout_centerInParent="true"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/openvotelogo"
                android:layout_marginBottom="5dp"
                android:id="@+id/selectVoteImage" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voting"
                android:textColor="#000"
                android:id="@+id/selectVoteHeading"
                android:textAlignment="center"
                android:layout_below="@id/selectVoteImage"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>