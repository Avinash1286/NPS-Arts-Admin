<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F7"
    tools:context=".ProfileActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/cordinate"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/toolmain"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/profileActivityTool"
                android:background="@color/primary"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/Theme.AppCompat.Light"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="true"
                android:background="#fff"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/Theme.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="100dp"
                    android:src="@drawable/profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/userProfilePic"
                    android:layout_marginStart="10dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:layout_marginStart="18dp"
                    android:visibility="visible"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:layout_below="@id/userProfilePic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userEmail"
                    android:layout_below="@id/username"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/editandFav"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userEmail"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Edit Profile"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/fav"
                        android:id="@+id/editButton"
                        />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:layout_toEndOf="@id/editButton"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/lace"
                        android:id="@+id/favOpen"
                        android:textAllCaps="false"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editandFav"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:paddingTop="2dp"
                    android:text="0 Posts"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="2dp"
                    android:id="@+id/containNumberOfPost"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000"
                    android:background="@drawable/back_no_post"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/containNumberOfPost"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:text="All Posts"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:id="@+id/allPostHeading"
                    android:textColor="#000"
                    />

            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/profilePostRecycle"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_below="@id/allPostHeading"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/holdEditFrame"
        />
</RelativeLayout>