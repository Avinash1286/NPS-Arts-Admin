<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF7F7"
    android:layout_height="match_parent"
    tools:context=".LogIn">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="#fff"
            android:id="@+id/logintoolbar"
            android:background="@color/primaryy"
             app:title="Nepal Police School"
            />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/logintoolbar"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FCFBFB"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titlletext"
                    android:text="LogIn"
                    android:textColor="@color/primaryy"
                    android:textSize="40sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline"
                    android:padding="8dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@id/titlletext"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Email..."
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:textColorHint="#8F8E8E"
                    android:id="@+id/email"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/outline"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Password..."
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:layout_below="@id/email"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#818181"
                    android:id="@+id/pass"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/forget"
                    android:layout_below="@id/pass"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#7A7979"
                    android:text="Forget your Password ?"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_corner"
                    android:layout_below="@id/forget"
                    android:layout_marginTop="30dp"
                    android:text="Sign In"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:id="@+id/logBut"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_corner"
                    android:layout_below="@id/logBut"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Create an account"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:id="@+id/signup"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signup"
                    android:layout_marginTop="10dp"
                    android:text="or"
                    android:textColor="#706F6F"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/line"
                    android:gravity="center"
                     android:id="@+id/orLable"
                    android:drawableRight="@drawable/line"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orLable"
                    android:layout_marginTop="10dp"
                     android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="LogIn with google"
                    android:id="@+id/logInWithGoogle"
                    android:drawableStart="@drawable/hellogoogle"
                    android:background="@drawable/back_google_signin"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>