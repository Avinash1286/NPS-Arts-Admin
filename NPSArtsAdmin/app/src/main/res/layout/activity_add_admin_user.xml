<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAdminUser">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addAdminUserToolAppbar">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addAdminUseTool"
            android:background="#fff"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addAdminUserToolAppbar"
        android:id="@+id/recycleAdminUserNumber"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/noInternetHolder"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:id="@+id/nointernetimageholder"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nointerneimage"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_below="@id/nointernetimageholder"
            android:textStyle="bold"
            android:id="@+id/showNOInternetMessage"
            android:textColor="#969393"
            android:text="No Internet Connection"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addNumberFrag"
        />

</RelativeLayout>