<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="4dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/one"
                android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"
                 android:id="@+id/holdeProfileInMagageAccount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holdeProfileInMagageAccount"
                android:layout_alignRight="@id/holdeProfileInMagageAccount"
                android:text="0 post"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_alignLeft="@id/holdeProfileInMagageAccount"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="2dp"
                android:id="@+id/holdsNoofPost"
                android:background="@drawable/back_no_post"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avinash Yadav"
                android:gravity="center"
                android:layout_toStartOf="@+id/showOptions"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/holdeProfileInMagageAccount"
                android:layout_alignBottom="@id/holdeProfileInMagageAccount"
                android:layout_alignTop="@id/holdeProfileInMagageAccount"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:id="@+id/setNameInManageAccount"
                />
              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentEnd="true"
                  android:id="@+id/showOptions"
                  android:layout_marginEnd="20dp"
                  android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                  />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/two"
                android:visibility="gone"
                android:gravity="center"
                android:layout_below="@id/one"
                android:paddingBottom="10dp"
                >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verificationButton"
                android:layout_marginTop="5dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Not Verified"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_alignTop="@id/verificationButton"
                android:layout_alignBottom="@id/verificationButton"
                android:layout_toEndOf="@id/verificationButton"
                android:id="@+id/verifyHeading"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/generalPermissionButton"
                android:layout_below="@id/verificationButton"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_toEndOf="@id/generalPermissionButton"
                android:text="No Permission"
                android:layout_alignTop="@id/generalPermissionButton"
                android:textSize="12sp"
                android:layout_alignBottom="@id/generalPermissionButton"
                android:id="@+id/permissionHeading"
                />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/verifyPrincipal"
                    android:layout_below="@id/generalPermissionButton"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_toEndOf="@id/verifyPrincipal"
                    android:text="Verify As Principal"
                    android:layout_alignTop="@id/verifyPrincipal"
                    android:textSize="12sp"
                    android:layout_alignBottom="@id/verifyPrincipal"
                    android:id="@+id/verifyPrincipalHeading"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/verifyCommandent"
                    android:layout_below="@id/verifyPrincipal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_toEndOf="@id/verifyCommandent"
                    android:text="Verify As Commandant"
                    android:layout_alignTop="@id/verifyCommandent"
                    android:textSize="12sp"
                    android:layout_alignBottom="@id/verifyCommandent"
                    android:id="@+id/verifyCommandentHeading"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/verifyChairPerson"
                    android:layout_below="@id/verifyCommandent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_toEndOf="@id/verifyChairPerson"
                    android:text="Verify As ChairPerson"
                    android:layout_alignTop="@id/verifyChairPerson"
                    android:textSize="12sp"
                    android:layout_alignBottom="@id/verifyChairPerson"
                    android:id="@+id/verifyChairPersonheading"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/verifyVicePri"
                    android:layout_below="@id/verifyChairPerson"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_toEndOf="@id/verifyVicePri"
                    android:text="Verify As Vice Principal"
                    android:layout_alignTop="@id/verifyVicePri"
                    android:textSize="12sp"
                    android:layout_alignBottom="@id/verifyVicePri"
                    android:id="@+id/verifyViceHeading"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>