<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/headerlogo"
        android:id="@+id/postCustomtoolbar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="NPS Arts Admin"
        android:layout_toStartOf="@id/compButton"
        android:textColor="#272727"
        android:layout_centerVertical="true"
        android:textSize="21dp"
        android:id="@+id/appheading"
        android:layout_marginStart="15sp"
        android:layout_toEndOf="@id/postCustomtoolbar"
        />
    <ImageView
        android:src="@drawable/comptlogo"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="30dp"
        android:id="@+id/compButton"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/startPostActivity"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:src="@drawable/addpostlogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/startPostActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        />



</RelativeLayout>