<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="2dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/showProfileInReports"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showReportMessage"
            android:layout_toEndOf="@id/showProfileInReports"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="#000"
            />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/delcine"
        android:src="@drawable/declineone"
        android:layout_below="@id/showReportMessage"
        android:layout_marginTop="10dp"
         android:layout_toStartOf="@id/review"
        android:layout_marginEnd="20dp"

        />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/showReportMessage"
                android:layout_marginTop="10dp"
                android:id="@+id/review"
                android:src="@drawable/sevenreview"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="Delete Post"
                android:layout_below="@id/showReportMessage"
                android:layout_marginTop="10dp"
                android:id="@+id/delectePost"
                android:layout_toStartOf="@id/delcine"
                android:layout_marginEnd="20dp"
                android:src="@drawable/sevendelete"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>